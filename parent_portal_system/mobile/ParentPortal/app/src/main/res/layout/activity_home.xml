<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    
    <android.support.v7.widget.CardView
        android:id="@+id/cv_activity_home_schedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cv_activity_home_attendance"
        app:layout_constraintBottom_toTopOf="@id/cv_activity_home_event">

        <TextView
            android:id="@+id/tv_activity_home_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_activity_home_attendance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_activity_home_schedule"
        app:layout_constraintBottom_toTopOf="@id/cv_activity_home_result"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_activity_home_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Attendance"
            android:textColor="@android:color/black"
            android:textSize="30sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_activity_home_event"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/cv_activity_home_schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cv_activity_home_result"
        app:layout_constraintBottom_toTopOf="@id/cv_activity_home_discipline">

        <TextView
            android:id="@+id/tv_activity_home_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_activity_home_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_activity_home_event"
        app:layout_constraintTop_toBottomOf="@id/cv_activity_home_attendance"
        app:layout_constraintBottom_toTopOf="@id/cv_activity_home_discipline">

        <TextView
            android:id="@+id/tv_activity_home_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_activity_home_discipline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cv_activity_home_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_activity_home_discipline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Discipline Records"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>