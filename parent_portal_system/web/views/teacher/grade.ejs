                    <li class="nav-item" role="presentation"><a class="nav-link" id="attendanceId" href="attendance/<%= teacher.id %>">Attendance</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" id="scheduleId" href="schedule/<%= teacher.id %>">Schedule</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" id="gradeId" href="grade/<%= teacher.id %>">Grade</a></li>
