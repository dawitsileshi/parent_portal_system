</div>

<div class="container">
    <form>
        <div class="row">
            <!--<div class="form-group col">-->
                <!--<label class="form-control-label"> Date-->
                    <!--<input class="form-control" type="text" id="dateInput" name="date" required>-->
                <!--</label>-->
            <!--</div>-->
            <div class="form-group col">
                <label class="form-control-label"> Grade
                    <input type="number" class="form-control" min="1" max="12" name="grade" id="grade"/>
                </label>
            </div>
            <div class="form-group col">
                <label class="form-control-label"> Course Name
                    <input class="form-control" type="text" id="courseInput" name="courseName" value=<%=info.course%> disabled required>
                </label>
            </div>

            <div class="form-group col">
                <label class="form-control-label"> Section
                    <input type="text"class="form-control" name="section" id="section"/>

                </label>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-primary" id="searchButton" name="search">Search</button>
        </div>


    </form>
</div>
<!--<section class="container container-fluid">-->

<div class="table-responsive table-striped table-bordered" style="margin-top: 30px;">
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Student Name</th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="classWorkCheck" name="classWork">
                    <label class="form-check-label" for="classWorkCheck">Class Work</label>
                </div>
                <!--Quiz-->
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="homeWorkCheck" name="homeWork">
                    <label class="form-check-label" for="homeWorkCheck">Home Work</label>
                </div>
                <!--Mid Exam-->
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="groupWorkCheck" name="groupWork">
                    <label class="form-check-label" for="groupWorkCheck">Group Work</label>
                </div>
                <!--Assignment-->
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="individualCheck" name="individual">
                    <label class="form-check-label" for="individualCheck">Individual</label>
                </div>
                <!--Final Exam-->
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="quiz1Check" name="quiz1">
                    <label class="form-check-label" for="quiz1Check">Quiz 1</label>
                </div>
                <!--Final Exam-->
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="quiz2Check" name="quiz2">
                    <label class="form-check-label" for="quiz2Check">Quiz 2</label>
                </div>
                <!--Final Exam-->
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="quiz3Check" name="quiz3">
                    <label class="form-check-label" for="quiz3Check">Quiz 3</label>
                </div>
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="finalCheck" name="final">
                    <label class="form-check-label" for="finalCheck">Final</label>
                </div>
                <!--Final Exam-->
            </th>
            <th>
                <div class="form-check">
                    <!--<input type="checkbox" class="form-check-input" id="scoreCheck" name="final">-->
                    <label class="form-check-label" for="finalCheck">Score</label>
                </div>
                <!--Final Exam-->
            </th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody id="tableBody">

        </tbody>    
    </table>
</div>
<!--</section>-->
<div class="text-center">
    <button type="button" id="submitButton" class="btn btn-primary center-block">Submit</button>
    <button type="button" id="addButton" class="btn btn-primary center-block">Add</button>
</div>

